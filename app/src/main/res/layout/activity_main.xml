<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topText"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:text="@string/header"
         />

    <Button
        app:layout_constraintTop_toBottomOf="@id/topText"
        android:text="Upload/Click Image"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:onClick="predict"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/predictBtn" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/predictBtn"
        android:text="Live Pose Detection"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:onClick="live"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/liveDetectionBtn" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/liveDetectionBtn"
        android:text="Accuracy Detection"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:onClick="accuracy"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/accuracy" />

